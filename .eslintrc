{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "linebreak-style": "off",
    "comma-dangle": ["error", "never"],
    "no-unused-vars": [
      "error", 
      {
        "vars": "local",
        "args": "none"
      }
    ]
  }
}